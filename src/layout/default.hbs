{{!-- 
  Це леяут по замовчюванню, котрий вже містить базову структуру HTML документа
  І котрий обгортає код container файлів для будь-яких ендпоїнтів
--}}
<!DOCTYPE html>
<html>

  <head>
    <title>
      {{page.title}}
    </title>
    <meta charset='utf-8' />
    <link href='css/index.css' rel='stylesheet' />
  </head>

  <body>
    {{#with header}}
     <header>
        <div>
            <h1>{{name.firstname}} {{name.lastname}}</h1>
        </div>
        <div>
            <b>{{position}}</b>
        </div>
        <div> 
           <em>{{salary}}</e>
        </div>
        <div>
          <b>{{address}}</b>
        </div>
       
        <br>
        <hr>
    </header>
    {{/with}}
    <nav>
      {{> link text="skills" hreh="/skills" }}
      {{> link text="summary" hreh="/summary"  }}
      {{> link text="education" hreh="/education"  }}
    </nav>
    {{#with main}}
    <section>
            {{> title data=summary.title}}
            <div>
                <P>
                    {{summary.text}}
                </P>
            </div>
           
        </section>
    {{/with}}
    {{#with experience}} 
        <section>
            {{> title data= title}}
            <div>
                <P>
                    {{text}}
                </P>
            </div>
        </section>
        {{/with}}
     
    {{!  ↓  ця кострукція показує куди шаблонізатору треба вставляти код з container файлу   --}}
    {{{body}}}
    {{#with footer}}
     <footer>
        <hr>
        <br>
        <div>
        {{#with social}}
        {{> link text=email.text hreh=email.href blank=true }}
        {{> link text=phone.text hreh=phone.href blank=true }}
        {{> link data=linkedin blank=true }}
      
        {{/with}}
        </div>
        <br>
        <div>
          <em>Copyright {{../header/name/firstname}} {{../header/name/lastname}}</em>
        </div>
        


    </footer>
    {{/with}}
  </body>

</html>